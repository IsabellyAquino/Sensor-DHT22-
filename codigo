#include <DHTesp.h
#include "WiFi.h"
#include "HTTPClient.h"


#define LEDPIN1 14
#define LEDPIN2 12
#define DHT_PIN 15 

int temperatura = 0;
int humidade = 0;

DHTesp dhtSensor; 
 
const char* ssid = "Wokwi-GUEST";
const char* password = "";


void setup() {
  Serial.begin(115200);

  pinMode(14, OUTPUT);
  pinMode(12, OUTPUT);

  Serial.begin(115200);
  dhtSensor.setup(DHT_PIN, DHTesp::DHT22);
  dhtSensor.getPin();
  delay(100);

  WiFi.begin(ssid, password);
  while(WiFi.status() != WL_CONNECTED){
    delay(500);
    Serial.print(".");
}

  Serial.println("WiFi Conectado!");
  Serial.println(WiFi.localIP());

}

void loop() {
  TempAndHumidity data = dhtSensor.getTempAndHumidity();
  
  float humidade = data.humidity;
  float temperatura = data.temperature;

  if(temperatura >= 35){
    digitalWrite(14, HIGH);
    Serial.println("ATENÇÃO: A temperatura ultrapassa 35°C!");
    Serial.println("TEMPERATURA: " + String(temperatura) + "°C" );
  } else {
     digitalWrite(14, LOW);
     Serial.println("TEMPERATURA: " + String(temperatura) + "°C" );
  }
  
  if(humidade >= 70){
    digitalWrite(12, HIGH);
    Serial.println("ATENÇÃO: Humidade ultrapassa dos 70% no momento!");
    Serial.println("HUMIDADE: " + String(humidade) + "%" );
  } else {
    digitalWrite(12, LOW);
    Serial.println("HUMIDADE: " + String(humidade) + "%" );
  }
  Serial.println("___________________________________________________");

  HTTPClient http;

  String url = "https://api.thingspeak.com/update?api_key=CMTF41PLV6DMCUXA&field1=";

  url = url + temperatura + "&field2=" + humidade;

  http.begin(url);
  int httpCode = http.GET();

  Serial.println(httpCode);
  if(httpCode >= 200 && httpCode <= 299){ 
    String payload = http.getString();
    Serial.println(payload);
  } else {
    Serial.println("Problema ao conectar API.");
  }

delay(5000);

}


